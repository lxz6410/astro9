---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import NewsItem from "../components/NewsItem.astro";

const categories = [
  {
    name: "科技",
    news: [
      {
        title: "5G技术的未来",
        summary: "5G技术将如何改变我们的生活。",
        link: "/news/tech-1",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
      {
        title: "人工智能的发展",
        summary: "AI技术在各个领域的应用。",
        link: "/news/tech-2",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
    ],
  },
  {
    name: "经济",
    news: [
      {
        title: "全球经济走势",
        summary: "经济学家对未来的预测。",
        link: "/news/econ-1",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
      {
        title: "中国经济的增长",
        summary: "中国经济在全球中的表现。",
        link: "/news/econ-2",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
    ],
  },
  {
    name: "健康",
    news: [
      {
        title: "新冠疫苗最新进展",
        summary: "新冠疫苗的研发和接种情况。",
        link: "/news/health-1",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
      {
        title: "健康饮食指南",
        summary: "如何保持健康的饮食习惯。",
        link: "/news/health-2",
        image:
          "https://fyb-1.cdn.bcebos.com/fyb/de6163834f53ca92c1273fff98ac9078.jpeg?x-bce-process=image/resize,m_fill,w_256,h_170",
      },
    ],
  },
];
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <title>新闻资讯 - 分类</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <Header />
    <div class="main-content">
      <h1>新闻分类</h1>
      {
        categories.map((category) => (
          <section>
            <h2>{category.name}</h2>
            {category.news.map((item) => (
              <NewsItem {...item} />
            ))}
          </section>
        ))
      }
    </div>
    <Footer />
  </body>
</html>
